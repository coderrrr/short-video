# 企业短视频学习平台 - 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==================== 数据库配置 ====================
# MySQL 配置
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=short_video
MYSQL_USER=short_video_user
MYSQL_PASSWORD=short_video_pass
MYSQL_PORT=3306

# 数据库连接URL（后端使用）
DATABASE_URL=mysql+pymysql://short_video_user:short_video_pass@localhost:3306/short_video

# ==================== 存储配置 ====================
# 存储类型: local（本地文件系统）或 s3（AWS S3）
STORAGE_TYPE=local

# 本地存储路径
STORAGE_PATH=./storage

# AWS S3 配置（生产环境）
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=cn-northwest-1
# S3_BUCKET_NAME=your-bucket-name

# ==================== 应用配置 ====================
# 后端服务端口
BACKEND_PORT=8000

# JWT 密钥
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production

# 调试模式
DEBUG=true

# 日志级别
LOG_LEVEL=INFO

# ==================== 企业集成配置 ====================
# 企业微信配置
# WECHAT_CORP_ID=your_corp_id
# WECHAT_CORP_SECRET=your_corp_secret

# 企业认证系统配置
# ENTERPRISE_AUTH_URL=https://your-enterprise-auth.com
# ENTERPRISE_AUTH_CLIENT_ID=your_client_id
# ENTERPRISE_AUTH_CLIENT_SECRET=your_client_secret

# ==================== 其他配置 ====================
# 视频上传大小限制（MB）
MAX_VIDEO_SIZE_MB=100

# 视频压缩阈值（MB，仅 Native App）
VIDEO_COMPRESSION_THRESHOLD_MB=50

# 支持的视频格式
SUPPORTED_VIDEO_FORMATS=mp4,mov,avi
